{
  "name": "acronymns-bot",
  "version": "1.0.0",
  "description": "Bot",
  "main": "lib/main.js",
  "scripts": {
    "build": "babel ./src -d lib --copy-files --ignore __mocks__,*.spec.js",
    "start": "node ./lib/main.js",
    "dev": "nodemon --watch src --exec \"npm run build && npm run start\"",
    "test": "jest --watchAll"
  },
  "dependencies": {
    "@slack/client": "^4.1.0",
    "body-parser": " ^1.18.2",
    "botkit": "^0.6.13",
    "debug": "^3.1.0",
    "entities": "^1.1.1",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "node-env-file": "^0.1.8"
  },
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "jest": "^22.4.3",
    "nodemon": "^1.17.3"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "rootDir": "./src"
  }
}
